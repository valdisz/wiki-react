{
    "include": [
        "./src/**/*",
        "./tests/**/*"
    ],
    "exclude": [
        "node_modules",
        ".cache",
        ".parcel-cache",
        ".dist"
    ],
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
        ],
        "jsx": "react",
        "strict": true,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmit": true,
        "noImplicitAny": false,
        "skipLibCheck": true
    }
}
